<div class="note-postit" style="
  background-color: #ffff88;
  border: 1px solid #ccc;
  border-radius: 8px;
  margin: 10px;
  padding: 10px;
  box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.15);
  width: 300px;
  height: 320px;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  position: absolute;
  top: 100px;
  left: 100px;
  cursor: move;
  z-index: 999;
">
  <!-- Draggable Handle -->
 <div class="drag-handle" style="cursor: move; padding: 5px; background: #333; color: white; font-weight: bold; border-radius: 5px;">
    📝 Drag me
  </div>
  
  <!-- Close Button -->
  <button class="close-btn" style="
    position: absolute;
    top: 5px;
    right: 5px;
    background-color: transparent;
    border: none;
    color: #333;
    font-size: 18px;
    cursor: pointer;
    z-index: 1001;
    padding: 0;
  ">&times;</button>
  
  <!-- The rest of the note content -->
  <!-- Note Content -->
    <form action="/save-note" method="POST" style="margin:0; height:100%; display:flex; flex-direction:column;">
        <div style="flex: 1;">
            <textarea name="content" class="form-control" style="background: transparent; border: none; resize: none; box-shadow: none; font-family: Arial, sans-serif; font-size: 14px; color: #333; width:100%; height:100%;" placeholder="Type your note here..." required>{{content}}</textarea>
        </div>
        
        {{#if note_id}}
            <input type="hidden" name="note_id" value="{{note_id}}">
        {{/if}}
        
        <!-- Buttons -->
        <div class="d-grid gap-1 mt-2">
            <button type="submit" class="btn btn-primary btn-sm w-100" style="margin-top: 5px; flex-shrink: 0;">Save</button>
        </div>
    </form>
  </form>
</div>
