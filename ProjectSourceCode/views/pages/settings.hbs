      width: 100%;
      padding: 12px;
      font-size: 1rem;
      margin: 0.8rem 0;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      background-color: #7f8c8d;
      color: white;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #95a5a6;
    }

    .delete-profile-btn {
      background-color: #7f8c8d;
    }

    .delete-profile-btn:hover {
      background-color:  #95a5a6;
    }
