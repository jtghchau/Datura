<div class="note-postit"
     style="background-color: #ffff88; border: 1px solid #ccc; border-radius: 8px; margin: 10px; padding: 10px; box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.15); width: 300px; height: 320px; display: flex; flex-direction: column; justify-content: flex-start; position: absolute; cursor: move; z-index: 999;"
     data-note-id="{{note_id}}"
     data-top="{{top}}"
     data-left="{{left}}">
    <div class="drag-handle"
         style="cursor: move; padding: 5px; background: #333; color: white; font-weight: bold; border-radius: 5px;">
        📝 Drag me
    </div>

    <button class="close-btn"
            style="position: absolute; top: 5px; right: 5px; background-color: transparent; border: none; color: #333; font-size: 18px; cursor: pointer; z-index: 1001; padding: 0;">
        &times;
    </button>

    <form class="note-form" action="/save-note" method="POST"
          style="margin:0; height:100%; display:flex; flex-direction:column;">
        <div style="flex: 1;">
            <textarea name="content" class="form-control note-content"
                      style="background: transparent; border: none; resize: none; box-shadow: none; font-family: Arial, sans-serif; font-size: 14px; color: #333; width:100%; height:100%;"
                      placeholder="Type your note here..." required>{{content}}</textarea>
        </div>
        <input type="hidden" name="note_id" value="{{note_id}}">
        <div class="d-grid gap-1 mt-2">
            <button type="submit" class="btn btn-primary btn-sm w-100" style="margin-top: 5px; flex-shrink: 0;">Save</button>
            <button type="button" class="btn btn-success btn-sm new-note-btn" style="margin-top: 5px;">+ New Note</button>
            <button type="button" class="btn btn-danger btn-sm delete-note-btn">Delete</button>
            <button type="button" class="btn btn-secondary btn-sm open-notes-btn">Open Notes</button>
        </div>
    </form>
</div>
